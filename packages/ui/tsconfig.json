{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2020",
    "skipLibCheck": true,
    "baseUrl": ".",                  // Add this
    "paths": {                       // Add this
      "@/*": ["./src/*"],
      "@/lib/utils": ["./src/lib/utils"]  // Optional: direct mapping for utils (helps some tools)
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "../types"
    }
  ],
  "exclude": ["node_modules", "dist"]
}